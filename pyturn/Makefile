# Makefile for python interface for package turn.
# File is generated by gopy. Do not edit.
# gopy build --output=pyturn -vm=python3 .

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/usr/local/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/Library/Frameworks/Python.framework/Versions/3.11/include/python3.11
LDFLAGS = -L/Library/Frameworks/Python.framework/Versions/3.11/lib -lpython3.11 -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen -no-make --vm=python3 .

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm turn.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w turn.go
	# generate turn_go$(LIBEXT) from turn.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o turn_go$(LIBEXT) turn.go
	# use pybindgen to build the turn.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _turn$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated turn.py python wrapper imports this c-code package
	
	$(GCC) turn.c -dynamiclib turn_go$(LIBEXT) -o _turn$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


